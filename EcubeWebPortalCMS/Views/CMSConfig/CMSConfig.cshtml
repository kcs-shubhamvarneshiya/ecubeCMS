@model EcubeWebPortalCMS.Models.CMSConfigModel
@{
    ViewBag.Title = "Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }
@using (Html.BeginForm("CMSConfig", "CMSConfig", FormMethod.Post, new { @id = "frmCMSConfig", @class = "form_validation_ttip well stdform" }))
{
<div class="">
    <div class="d-flex align-items-center border-bottom pb-4 mb-4 main-form--heading">
        <h4 class="heading mb-4 m-md-0">@ViewBag.Title</h4>
    </div>
    <div class="panel-body pan">
        <div class="card shadow rounded overflow-hidden card-space">
            @Html.HiddenFor(m => m.HdnIFrame)
            @Html.HiddenFor(m => m.Id)
            <div class="row">
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">
                        Module <span class="f_req text-danger">*</span>
                    </h5>
                    @Html.DropDownList("Module", new List<SelectListItem>()
                    {new SelectListItem { Text="Banquet", Value = "Banquet"},
                    new SelectListItem { Text="Room", Value = "Room"}},
                    new { @class = "form-control" })
                    @* @Html.TextBoxFor(m => m.Module, new { @class = "alphanumwithspc form-control", @maxlength = "50", @tabindex = "2", @next = "PersonName" })*@
                </div>
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">
                        Person Name <span class="f_req text-danger">*</span>
                    </h5>
                    @Html.TextBoxFor(m => m.PersonName, new { @class = "alphanumwithspc form-control", @maxlength = "50", @tabindex = "3", @next = "EmailID" })
                </div>
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">
                        Email Id <span class="f_req text-danger">*</span>
                    </h5>
                    @Html.TextBoxFor(m => m.EmailID, new { @class = "emailid form-control", @maxlength = "50", @tabindex = "4", @next = "MobileNo" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">
                        Mobile No <span class="f_req text-danger">*</span>
                    </h5>
                    @Html.TextBoxFor(m => m.MobileNo, new { @class = "numwithspc form-control", @maxlength = "15", @tabindex = "5", @next = "btnSubmit" })
                </div>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <input class="btn btn-primary mr-2" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="6" title='Save configuration' />
                <input class="btn btn-secondary cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="7" title='Cancel configuration' />
            </div>
        </div>
    </div>
</div>
}
<script src="~/Scripts/Utility/CMSConfig.js"></script>