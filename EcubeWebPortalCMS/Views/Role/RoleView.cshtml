@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdd = Convert.ToBoolean(ViewData["blAddRights"]);
    bool isEdit = Convert.ToBoolean(ViewData["blEditRights"]);
    bool isDelete = Convert.ToBoolean(ViewData["blDeleteRights"]);
}
<div class="row-fluid">
    <div class="span12">
        <br />
        <h4 class="heading">
            @ViewBag.Title</h4>
        @Html.Hidden("hfAdd", @isAdd)
        @Html.Hidden("hfEdit", @isEdit)
        @Html.Hidden("hfDelete", @isDelete)
    </div>
    <div class="span12 clearfix contant-toph">
        <div class="usearch-text">
            <label>
                Search
            </label>
            <input type="text" id="txtRoleSearch" />
        </div>
        <ul class="adduser-links">
            <li>
                @if (isAdd)
                {
                    @Html.ActionLink("Add New Role", "Role", "Role")
                }
                @if (isDelete)
                {
                    <a id="btnDeleteRole" href="javascript:void(0)">Delete Role</a>
                }
            </li>
        </ul>
    </div>
    <div class="span12 user-contant">
        <div id="dvRole">
            <table id="tblRole"></table>
            <div id="dvRoleFooter" style="text-align: center;"></div>
        </div>
    </div>
</div>
<script src="~/Scripts/Utility/RoleView.js"></script>
