@model EcubeWebPortalCMS.Models.CMSConfigModel
@{
    ViewBag.Title = "Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }
@using (Html.BeginForm("CMSConfig", "CMSConfig", FormMethod.Post, new { @id = "frmCMSConfig", @class = "form_validation_ttip well stdform" }))
{
<div class="panel panel-grey">
        <div class="panel-heading">
         <h3>@ViewBag.Title</h3>   
        </div>
        <div class="panel-body pan">
            <div class="row-fluid">
                @Html.HiddenFor(m => m.HdnIFrame)
                @Html.HiddenFor(m => m.Id)
            </div>
            <div class="row-fluid">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-12">
                        <div class="form-group">
                            <label>
                                Module <span class="f_req">*</span>
                            </label>
                             @Html.DropDownList("Module", new List<SelectListItem>() 
                            {new SelectListItem { Text="Banquet", Value = "Banquet"},
                            new SelectListItem { Text="Room", Value = "Room"}})
                           @* @Html.TextBoxFor(m => m.Module, new { @class = "span9  alphanumwithspc form-control ", @maxlength = "50", @tabindex = "2", @next = "PersonName" })*@
                        </div>
                        </div>
                        <div class="col-md-12">
                        <div class="form-group">
                            <label>
                                Person Name <span class="f_req">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.PersonName, new { @class = "span9  alphanumwithspc form-control ", @maxlength = "50", @tabindex = "3", @next = "EmailID" })
                        </div></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-12">
                        <div class="form-group">
                            <label>
                                EmailId <span class="f_req">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.EmailID, new { @class = "span9  emailid form-control ", @maxlength = "50", @tabindex = "4", @next = "MobileNo" })
                        </div></div>
                        <div class="col-md-12">
                        <div class="form-group">
                            <label>
                                Mobile No <span class="f_req">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.MobileNo, new { @class = "span9  numwithspc form-control ", @maxlength = "15", @tabindex = "5", @next = "btnSubmit" })
                        </div></div>
                    </div>
                </div>
                  <div class="row-fluid">
                <div class="form-group">
                    <div class="col-md-12">
                        <input class="btn btn-inverse btn-primary" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="6" title='Save configuration' />
                        <input class="btn cancel btn-green" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="7" title='Cancel configuration' />
                    </div>
            </div>
                      </div>
</div>
        </div>
</div>
}
<script src="~/Scripts/Utility/CMSConfig.js"></script>