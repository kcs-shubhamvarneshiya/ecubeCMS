@model EcubeWebPortalCMS.Models.MovieTheatreModel
@{
    ViewBag.Title = "Movie Theatre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{using (Html.BeginForm("MovieTheatre", "MovieTheatre", FormMethod.Post, new { @id = "frmMovieTheatre", @class = "form_validation_ttip well stdform" }))
    {
        <div class="">
            <div class="d-flex align-items-center border-bottom pb-2 mb-3 main-form--heading ">
                <h4 class="heading mb-4 m-md-0">
                    @ViewBag.Title
                </h4>
            </div>
            <div class="card shadow rounded overflow-hidden card-space">
                @Html.HiddenFor(m => m.HdnIFrame)
                @Html.HiddenFor(m => m.Id)
                <div class="row">
                    <div class="col-md-4 mb-3 pb-3">
                        <h5 class="mb-2">
                            Movie Theatre Name <span class="f_req text-danger">*</span>
                        </h5>
                        @Html.TextBoxFor(m => m.MovieTheatreName, new { @class = "span9 required alphanumwithspc form-control ", @maxlength = "50", @tabindex = "2", @next = "TheatreFloor" })
                    </div>
               
                    <div class="col-md-4 mb-3 pb-3">
                        <h5 class="mb-2">
                            Theatre Floor
                        </h5>
                        @Html.TextBoxFor(m => m.TheatreFloor, new { @class = "span9  alphanumwithspc form-control ", @maxlength = "10", @tabindex = "3", @next = "btnSubmit" })
                    </div>
               
                    <div class="col-md-4 mb-3 pb-3">
                        <h5 class="mb-2">
                            Service <span class="f_req text-danger">*</span>
                        </h5>
                        @Html.DropDownListFor(m => m.ServiceId, Model.LstService, new { @class = " alphanumwithspc form-control ", @maxlength = "10", @tabindex = "4", @next = "btnSubmit" })
                    </div>
                </div>
                @*<div class="row d-none d-md-flex" id="divServicehead">
                    <div class="col-md-2">
                        <h5 class="mb-2">&nbsp;</h5>
                    </div>
                    <div class="col-md-4">
                        <h5 class="mb-2">Member Service <span class="f_req text-danger">*</span></h5>
                    </div>
                    <div class="col-md-4">
                        <h5 class="mb-2">Guest Service <span class="f_req text-danger">*</span></h5>
                    </div>
                </div>*@
                <div id="divClass"></div>
                <div class="d-flex justify-content-end mt-3">
                    <input class="btn btn-primary mr-2" id="btnSubmit" name="inputSubmit" type="button" value="Save" tabindex="5" title='Save Movie Theatre' />
                    <input class="btn btn-secondary cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="6" title='Cancel Movie Theatre' />
                </div>
            </div>
        </div>
    }
}

<script src="~/Scripts/Utility/MovieTheatre.js"></script>