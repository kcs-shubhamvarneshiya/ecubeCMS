@{
    ViewBag.Title = "Service Support Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdd = Convert.ToBoolean(ViewData["blAddRights"]);
    bool isEdit = Convert.ToBoolean(ViewData["blEditRights"]);
    bool isDelete = Convert.ToBoolean(ViewData["blDeleteRights"]);
  
}
<div class="row-fluid">
    <div class="span12">
        <h4 class="heading">
            @ViewBag.Title
        </h4>
        @Html.Hidden("hfAdd", @isAdd)
        @Html.Hidden("hfEdit", @isEdit)
        @Html.Hidden("hfDelete", @isDelete)

    </div>
    <div class="span12 clearfix contant-toph">
        <div class="usearch-text">
            <label>
                Search
            </label>
            <input type="text" id="txtServiceSupportTypeSearch" />
        </div>
        <ul class="adduser-links">
            <li>
                @if (isAdd)
                {
                @Html.ActionLink("Add New Support Type", "ServiceSupportType", "ServiceSupportType")
                }
                 @if (isDelete)
                {
                <a id="btnDeleteSupport" href="javascript:void(0)">Delete Support Type</a>
                 }
            </li>
        </ul>
    </div>
    <div class="span12 user-contant">
        <div id="dvServiceSupportType">
            <table id="tblServiceSupportType"></table>
            <div id="dvServiceSupportTypeFooter"></div>
        </div>
    </div>
</div>

<script src="~/Scripts/Utility/ServiceSupportTypeView.js"></script>
