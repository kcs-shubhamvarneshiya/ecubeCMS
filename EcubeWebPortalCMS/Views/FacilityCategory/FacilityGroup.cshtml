@model EcubeWebPortalCMS.Models.FacilityGroupModel
@{
    ViewBag.Title = "Facility";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("FacilityGroup", "FacilityCategory", FormMethod.Post, new { @id = "frmFacilityGroup", @class = "form_validation_ttip well stdform" }))
{
<div class="">
    <div class="panel-heading">
        <div class="d-flex align-items-center border-bottom pb-2 mb-3 main-form--heading ">
            <h4 class="heading mb-4 m-md-0">
                @ViewBag.Title
                @Html.HiddenFor(m => m.HdnSession)
            </h4>
        </div>
    </div>
    <div class="pan">
        <div class="card shadow rounded overflow-hidden card-space">
            @Html.HiddenFor(m => m.HdnIFrame)
            @Html.HiddenFor(m => m.Id)
            <div class="row">
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">Facility Name <span class="f_req text-danger">*</span></h5>
                    @Html.TextBoxFor(m => m.Name, new { @class = "span9 required alphanumwithspc form-control ", @maxlength = "50", @tabindex = "1", @next = "CategoryId" })
                </div>

                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">Facility Name <span class="f_req text-danger">*</span></h5>
                    @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, new { @Id = "ddlCategoryList", @class = "span3 required form-control", @tabindex = "2", @next = "SequenceNo" })
                </div>

                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">Sequence No</h5>
                    @Html.TextBoxFor(m => m.SequenceNo, new { @class = "span9  numeric form-control ", @maxlength = "3", @tabindex = "3", @next = "Description" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">Banner Image</h5>
                    <input type="file" id="BannerImage" class="mb-2" tabindex="4" />
                    @Html.HiddenFor(m => m.BannerImage, new { id = "BannerImage" })
                    <img id="aBannerImageName" alt="" onerror="this.onerror=null;this.src='/Content/Image/noprofile-img.jpg';" src="@Model.BannerImage" class="movie-mobile--img" />
                </div>
                <div class="col-md-4 mb-3 pb-3">
                    <h5 class="mb-2">Icon Image</h5>
                    <input type="file" id="IconImage" class="mb-2" tabindex="5" />
                    @Html.HiddenFor(m => m.IconImage, new { id = "IconImage" })
                    <img id="aIconImageName" alt="" onerror="this.onerror=null;this.src='/Content/Image/noprofile-img.jpg';" src="@Model.IconImage" class="movie-mobile--img" />
                    <span class="text-danger d-flex pt-2 pb-2"><span>Note: &nbsp; </span><span>Allowed Format: .jpg, .gif, .png; <br /> Allowed Size: 108 X 108</span></span>
            </div>
            </div>
            <div class="row">
                <div class="col-md-8 mb-3 pb-3">
                    <h5 class="mb-2">Description</h5>
                    @Html.TextAreaFor(m => m.Description, new { @class = "span9  alphanumwithspc form-control ckeditor", @tabindex = "6", @next = "BannerImage" })
                </div>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <input class="btn btn-primary mr-2" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="15" title='Save Facility' />
                <input class="btn btn-secondary cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="16" title='Cancel Facility' />
            </div>
        </div>
    </div>
</div>
}
<script type="text/javascript">
    CKEDITOR.replace('Description', { toolbar: '1', htmlEncodeOutput: true });
</script>
<script src="~/Scripts/Utility/FacilityGroup.js"></script>
<script src="~/Scripts/Library/ckeditor/ckeditor.js"></script>